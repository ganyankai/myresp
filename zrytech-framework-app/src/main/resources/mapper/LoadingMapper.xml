<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zry.framework.mapper.LoadingMapper">
    <resultMap id="loading" type="com.zry.framework.entity.Loading">
        <id column="id" property="id"/>
        <result column="cargo_id" property="cargoId"/>
        <result column="longitude" property="longitude"/>
        <result column="latitude" property="latitude"/>
        <result column="province" property="province"/>
        <result column="city" property="city"/>
        <result column="county" property="county"/>
        <result column="address_detail" property="addressDetail"/>
        <result column="qty" property="qty"/>
        <result column="type" property="type"/>
        <result column="remark" property="remark"/>
        <result column="seq_no" property="seqNo"/>
        <result column="status" property="status"/>
        <result column="load_date" property="loadDate"/>
        <result column="end_date" property="endDate"/>
    </resultMap>

    <sql id="columns">
       id,cargo_id,longitude,latitude,province,city,county,address_detail,qty,type,remark,seq_no,status,load_date,end_date
    </sql>

    <select id="selectLoadingList" resultMap="loading">
        select
        <include refid="columns"/>
        from cargo_location
        <trim prefix="where " prefixOverrides="and ">
            1=1
            <if test="id != null">
                and id=#{id}
            </if>
            <if test="loadingType != null and loadingType !=''">
                and type=#{loadingType}
            </if>
        </trim>
        ORDER BY end_date DESC
    </select>

    <select id="get" resultMap="loading">
        select
        <include refid="columns"/>
        from cargo_location
        where id =#{id}
    </select>

    <insert id="batchSave" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        insert into cargo_location
        (cargo_id,
        longitude,
        latitude,
        province,
        city,
        county,
        address_detail,
        qty,
        remark,
        seq_no,
        status,
        load_date,
        end_date,
        type
        )
        values
        <foreach collection="list" item="item" index="index"
                 separator=",">
            (
            #{cargoId},
            #{item.longitude},
            #{item.latitude},
            #{item.province},
            #{item.city},
            #{item.county},
            #{item.addressDetail},
            #{item.qty},
            #{item.remark},
            #{item.seqNo},
            #{item.status},
            #{item.loadDate},
            #{item.endDate},
            #{loadingType}
            )
        </foreach>
    </insert>

</mapper>